---
import Section from "./Section.astro";
---

<Section class="hero-section">
    <div class="hero-container">
        <div class="hero-background"></div>

        <h1 class="hero-title" aria-label="Wil Bishop">
            <span class="text-wrapper">WIL</span>
            <span class="text-wrapper text-highlight">
                BISH<span class="image-container">
                    <img
                        src="/profile.jpg"
                        alt=""
                        class="profile-image"
                        fetchpriority="high"
                        loading="eager"
                    />
                </span>P
            </span>
        </h1>

        <div class="typing-container">
            <span class="static-text"
                >Computer Science Student specializing in</span
            >
            <div class="dynamic-text-wrapper">
                <span class="gradient-text" id="typing-text"></span><span
                    class="cursor"></span>
            </div>
        </div>
    </div>
</Section>

<script>
    const words = [
        "Machine Learning",
        "Artificial Intelligence",
        "Deep Learning",
        "Neural Networks",
    ];
    const typingText = document.getElementById("typing-text");

    let wordIndex = 0;
    let charIndex = 0;
    let isDeleting = false;

    const typingSpeed = 80;
    const deletingSpeed = 40;
    const pauseTime = 1500;
    const initialDelay = 100;

    let timeoutId;

    function type() {
        const currentWord = words[wordIndex];

        if (isDeleting) {
            charIndex--;
        } else {
            charIndex++;
        }

        if (typingText) {
            typingText.textContent = currentWord.substring(0, charIndex);
        }

        let nextSpeed = isDeleting ? deletingSpeed : typingSpeed;

        if (!isDeleting && charIndex === currentWord.length) {
            nextSpeed = pauseTime;
            isDeleting = true;
        } else if (isDeleting && charIndex === 0) {
            isDeleting = false;
            wordIndex = (wordIndex + 1) % words.length;
            nextSpeed = 500;
        }

        timeoutId = setTimeout(type, nextSpeed);
    }

    // Start with initial delay
    setTimeout(type, initialDelay);
</script>

<style>
    .hero-section {
        min-height: 100vh;
        width: 100vw;
        display: flex;
        flex-direction: column;
        justify-content: center; /* Center content vertically */
        align-items: center;
        padding: var(--space-8);
        padding-top: 80px; /* Clearance for fixed navbar */
        position: relative;
        margin-left: calc(-50vw + 50%);
    }

    .hero-container {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        max-width: 1200px;
    }

    .hero-title {
        font-family: var(--font-display);
        font-size: clamp(3rem, 10vw, 7rem); /* Reduced from 15vw/10rem */
        font-weight: 800;
        line-height: 0.9;
        margin-bottom: var(--space-4); /* Tightened from space-8 */
        letter-spacing: -0.04em;
        display: flex;
        flex-direction: column; /* Stack by default (Mobile) */
        align-items: center;
        justify-content: center;
        text-align: center;
        width: 100%;
        gap: 0;
    }

    @media (min-width: 768px) {
        .hero-title {
            flex-direction: row; /* Inline on Desktop */
            gap: 0.25em;
            line-height: 1;
        }
    }

    .text-wrapper {
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .text-highlight {
        vertical-align: middle;
    }

    .image-container {
        display: inline-block;
        width: 0.8em;
        height: 0.8em;
        margin: 0 0.05em;
        border-radius: 50%;
        overflow: hidden;
        vertical-align: middle;
        position: relative;
        flex-shrink: 0;
        background-color: var(--bg-secondary);
        border: 2px solid rgba(255, 255, 255, 0.1);
        animation: fade-in 1s ease-out forwards 0.5s;
        opacity: 0;
    }

    .profile-image {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transform: scale(
            1.1
        ); /* Subtle scale to ensure the image fully covers the circular frame */
    }

    .typing-container {
        font-family: var(--font-display);
        color: var(--text-secondary);
        font-weight: 500;
        margin-top: 0;
        text-align: center;
        width: 100%;
        max-width: 800px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--space-2);
    }

    .static-text {
        font-size: clamp(0.9rem, 2.5vw, 1.2rem); /* Slightly smaller */
        display: block;
        opacity: 0.8; /* Subtle treatment like reference */
    }

    .dynamic-text-wrapper {
        font-size: clamp(1.2rem, 3.5vw, 2rem); /* Slightly smaller */
        display: block;
        min-height: 1.5em; /* Prevent layout shift */
        font-weight: 700;
    }

    .gradient-text {
        background: linear-gradient(
            135deg,
            var(--accent-primary),
            var(--accent-secondary)
        );
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .cursor {
        display: inline-block;
        width: 2px;
        height: 1em;
        background: var(--accent-primary);
        margin-left: 2px;
        vertical-align: middle;
        animation: blink 1s step-end infinite;
    }

    @keyframes blink {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
    }

    @keyframes fade-in {
        to {
            opacity: 1;
        }
    }
</style>
