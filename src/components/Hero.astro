---
import Section from "./Section.astro";
import GlowButton from "./ui/GlowButton.astro";
import { Image } from "astro:assets";
import profileImage from "../assets/profile.png";

const socialLinks = [
    { name: "GitHub", url: "https://github.com/wilsebbis", icon: "github" },
    {
        name: "LinkedIn",
        url: "https://linkedin.com/in/wilsebbis",
        icon: "linkedin",
    },
    { name: "Email", url: "mailto:wilsebbis@wilsebbis.com", icon: "mail" },
];
---

<Section class="relative min-h-screen flex items-center justify-center p-8">
    <div class="relative z-10 w-full max-w-4xl mx-auto">
        <div
            class="glass-card p-12 flex flex-col items-start gap-8 bg-bg-secondary/40 backdrop-blur-2xl border-white/5"
        >
            <!-- Identity Row -->
            <div class="flex items-center gap-6">
                <div class="relative">
                    <!-- Chaotic Blob 1 -->
                    <div
                        class="absolute -inset-8 bg-gradient-to-br from-accent-primary to-purple-600 rounded-full blur-2xl opacity-40 animate-blob-1 mix-blend-screen"
                    >
                    </div>
                    <!-- Chaotic Blob 2 -->
                    <div
                        class="absolute -inset-8 bg-gradient-to-tr from-accent-secondary to-pink-500 rounded-full blur-2xl opacity-40 animate-blob-2 mix-blend-screen"
                    >
                    </div>
                    <!-- Chaotic Blob 3 -->
                    <div
                        class="absolute -inset-8 bg-gradient-to-bl from-accent-tertiary to-blue-400 rounded-full blur-2xl opacity-40 animate-blob-3 mix-blend-screen"
                    >
                    </div>
                    <Image
                        src={profileImage}
                        alt="Wil Bishop"
                        class="relative w-28 h-28 md:w-32 md:h-32 rounded-full object-cover border-2 border-white/10"
                        format="webp"
                        loading="eager"
                        width={256}
                        height={256}
                    />
                </div>
                <span
                    class="font-display text-3xl md:text-4xl font-semibold text-text-secondary tracking-tight"
                    >Wil Bishop</span
                >
            </div>

            <!-- Main Headline -->
            <div class="space-y-4">
                <h1
                    class="font-display text-5xl md:text-7xl font-extrabold leading-[1.1] tracking-tighter text-text-primary max-w-[15ch]"
                >
                    I build applied<br />
                    <span class="gradient-text block">ML Systems</span>
                    that ship.
                </h1>
                <p
                    class="text-lg md:text-xl text-text-secondary max-w-[50ch] leading-relaxed"
                >
                    Specializing in model deployment, data pipelines, and
                    backend systems that scale for production environments.
                </p>
            </div>

            <!-- CTAs & Socials -->
            <div class="flex flex-col sm:flex-row items-center gap-6 w-full">
                <a
                    href="#projects"
                    class="gradient-ring-btn relative inline-flex items-center justify-center px-12 py-4 font-display font-semibold text-white rounded-xl transition-transform hover:scale-105"
                >
                    <span class="btn-inner">View Projects</span>
                </a>

                <div class="flex items-center gap-5">
                    {
                        socialLinks.map((link) => (
                            <a
                                href={link.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="text-text-secondary hover:text-accent-primary transition-colors duration-300"
                                aria-label={link.name}
                            >
                                {link.icon === "github" && (
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="22"
                                        height="22"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                                        <path d="M9 18c-4.51 2-5-2-7-2" />
                                    </svg>
                                )}
                                {link.icon === "linkedin" && (
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="22"
                                        height="22"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
                                        <rect
                                            width="4"
                                            height="12"
                                            x="2"
                                            y="9"
                                        />
                                        <circle cx="4" cy="4" r="2" />
                                    </svg>
                                )}
                                {link.icon === "mail" && (
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="22"
                                        height="22"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <rect
                                            width="20"
                                            height="16"
                                            x="2"
                                            y="4"
                                            rx="2"
                                        />
                                        <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
                                    </svg>
                                )}
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</Section>

<style>
    /* Gradient highlight on headlines */
    /* Gradient highlight on headlines */
    .gradient-text {
        /* Block display for separate line */
        display: block;
        width: fit-content;

        /* Gradient & Text Clip */
        background-image: linear-gradient(
            to right,
            var(--color-accent-primary),
            var(--color-accent-secondary),
            var(--color-accent-tertiary),
            var(--color-accent-primary)
        );
        background-size: 200% auto;
        background-clip: text;
        -webkit-background-clip: text;
        color: transparent;

        /* Animation */
        animation: gradient-scroll 6s linear infinite;
    }

    @keyframes gradient-scroll {
        from {
            background-position: 0% center;
        }
        to {
            background-position: -200% center;
        }
    }

    /* Gradient Ring Button */
    .gradient-ring-btn {
        position: relative;
        background: transparent;
        z-index: 1;
    }

    .gradient-ring-btn::before {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: 0.75rem;
        padding: 2px;
        background: conic-gradient(
            from var(--ring-angle, 0deg),
            var(--color-accent-primary),
            var(--color-accent-secondary),
            var(--color-accent-tertiary),
            var(--color-accent-primary)
        );
        -webkit-mask:
            linear-gradient(#fff 0 0) content-box,
            linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        animation: ring-rotate 4s linear infinite;
        z-index: -1;
    }

    .gradient-ring-btn .btn-inner {
        position: relative;
        z-index: 2;
    }

    .gradient-ring-btn::after {
        content: "";
        position: absolute;
        inset: 2px;
        border-radius: calc(0.75rem - 2px);
        background: var(--color-bg-secondary);
        opacity: 0.6;
        backdrop-filter: blur(12px);
        z-index: -1;
        transition: opacity 0.3s ease;
    }

    .gradient-ring-btn:hover::after {
        opacity: 0.8;
    }

    @property --ring-angle {
        syntax: "<angle>";
        initial-value: 0deg;
        inherits: false;
    }

    @keyframes ring-rotate {
        to {
            --ring-angle: 360deg;
        }
    }

    .animate-blob-1 {
        animation: blob-bounce-1 10s infinite alternate
            cubic-bezier(0.4, 0, 0.2, 1);
    }
    .animate-blob-2 {
        animation: blob-bounce-2 12s infinite alternate-reverse
            cubic-bezier(0.4, 0, 0.2, 1);
    }
    .animate-blob-3 {
        animation: blob-bounce-3 9s infinite alternate
            cubic-bezier(0.4, 0, 0.2, 1);
    }

    @keyframes blob-bounce-1 {
        0% {
            transform: translate(0, 0) scale(1) rotate(0deg);
        }
        33% {
            transform: translate(10%, -10%) scale(1.1) rotate(120deg);
        }
        66% {
            transform: translate(-5%, 15%) scale(0.9) rotate(240deg);
        }
        100% {
            transform: translate(0, 0) scale(1) rotate(360deg);
        }
    }

    @keyframes blob-bounce-2 {
        0% {
            transform: translate(0, 0) scale(1) rotate(0deg);
        }
        33% {
            transform: translate(-10%, -5%) scale(1.2) rotate(-100deg);
        }
        66% {
            transform: translate(15%, 10%) scale(0.85) rotate(-200deg);
        }
        100% {
            transform: translate(0, 0) scale(1) rotate(-360deg);
        }
    }

    @keyframes blob-bounce-3 {
        0% {
            transform: translate(0, 0) scale(1) rotate(0deg);
        }
        33% {
            transform: translate(5%, 15%) scale(0.9) rotate(90deg);
        }
        66% {
            transform: translate(-15%, -10%) scale(1.15) rotate(180deg);
        }
        100% {
            transform: translate(0, 0) scale(1) rotate(270deg);
        }
    }
</style>
