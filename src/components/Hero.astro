---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import profileImage from "../assets/profile.png";
import evenCuterProfileImage from "../assets/even_cuter_profile.png";
---

<Section class="hero-section">
    <div class="hero-container">
        <div class="hero-background"></div>

        <h1 class="hero-title">
            Wil Bish<span class="image-container" id="profile-container"
                ><span class="sr-only">o</span>
                <Image
                    src={profileImage}
                    alt=""
                    class="profile-image main"
                    format="webp"
                    loading="eager"
                    fetchpriority="high"
                />
                <Image
                    src={evenCuterProfileImage}
                    alt=""
                    class="profile-image cute"
                    format="webp"
                    loading="eager"
                    fetchpriority="high"
                /></span
            >p
        </h1>

        <div class="typing-container">
            <span class="static-text"
                >Computer Science Student specializing in</span
            >
            <div class="dynamic-text-wrapper">
                <span class="gradient-text" id="typing-text"></span><span
                    class="cursor"></span>
            </div>
        </div>
    </div>
</Section>

<script>
    // Handle profile image click/tap
    const profileContainer = document.getElementById("profile-container");
    if (profileContainer) {
        profileContainer.addEventListener("click", (e) => {
            // Prevent default behavior if any, though it's a span
            e.preventDefault();
            profileContainer.classList.toggle("clicked");
        });
    }

    const words = [
        "Machine Learning",
        "Artificial Intelligence",
        "Deep Learning",
        "Neural Networks",
    ];
    const typingText = document.getElementById("typing-text");

    let wordIndex = 0;
    let charIndex = 0;
    let isDeleting = false;

    const typingSpeed = 80;
    const deletingSpeed = 40;
    const pauseTime = 1500;
    const initialDelay = 100;

    let timeoutId;

    function type() {
        const currentWord = words[wordIndex];

        if (isDeleting) {
            charIndex--;
        } else {
            charIndex++;
        }

        if (typingText) {
            typingText.textContent = currentWord.substring(0, charIndex);
        }

        let nextSpeed = isDeleting ? deletingSpeed : typingSpeed;

        if (!isDeleting && charIndex === currentWord.length) {
            nextSpeed = pauseTime;
            isDeleting = true;
        } else if (isDeleting && charIndex === 0) {
            isDeleting = false;
            wordIndex = (wordIndex + 1) % words.length;
            nextSpeed = 500;
        }

        timeoutId = setTimeout(type, nextSpeed);
    }

    // Start with initial delay
    setTimeout(type, initialDelay);
</script>

<style>
    .hero-section {
        min-height: 100vh;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: var(--space-24) var(--space-8); /* Increased top/bottom padding for breathing room */
        position: relative;
    }

    .hero-container {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }

    .hero-title {
        font-family: var(--font-display);
        font-size: clamp(
            3.5rem,
            12vw,
            12rem
        ); /* Increased cap from 8.5rem to 12rem */
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: var(--space-4);
        letter-spacing: -0.04em;
        text-align: center;
        width: 100%;
        display: block;
        white-space: nowrap; /* Keep name on one line for the "O" replacement effect */
        text-transform: uppercase;
    }

    /* Mobile scale-down to ensure it stays on one line */
    @media (max-width: 480px) {
        .hero-title {
            font-size: clamp(2.5rem, 15vw, 3.5rem);
            white-space: normal; /* Allow wrap if extremely narrow */
        }
    }

    .image-container {
        display: inline-block;
        width: 0.76em; /* Reduced size to match cap height of letters */
        height: 0.76em;
        margin: 0 0.02em;
        border-radius: 50%;
        vertical-align: middle;
        position: relative;
        top: -0.08em; /* Adjusted to align with cap height precisely */
        flex-shrink: 0;
        background-color: #ffffff; /* Matches letter color to fill PNG transparency */
        border: none; /* Removed the ring */
        cursor: pointer; /* Indicate interactivity */
        -webkit-tap-highlight-color: transparent; /* Remove tap highlight on mobile */
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }

    .profile-image {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center 60%; /* Shifted head up to show more shirt */
        transform: none; /* Removed scale to show more of the original image context */
        border-radius: 50%;
        transition: opacity 0.3s ease;
    }

    .profile-image.main {
        position: relative;
        z-index: 1;
        transition: opacity 0.3s ease;
    }

    .profile-image.cute {
        position: absolute;
        top: 0;
        left: 0;
        opacity: 0;
        z-index: 2;
    }

    .image-container.clicked .profile-image.cute {
        opacity: 1;
    }

    .image-container.clicked .profile-image.main {
        opacity: 0;
    }

    .typing-container {
        font-family: var(--font-display);
        color: var(--text-secondary);
        font-weight: 500;
        margin-top: 0;
        text-align: center;
        width: 100%;
        max-width: 800px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--space-2);
    }

    .static-text {
        font-size: clamp(0.9rem, 2.5vw, 1.2rem); /* Slightly smaller */
        display: block;
        opacity: 0.8; /* Subtle treatment like reference */
    }

    .dynamic-text-wrapper {
        font-size: clamp(1.2rem, 3.5vw, 2rem); /* Slightly smaller */
        display: block;
        min-height: 1.5em; /* Prevent layout shift */
        font-weight: 700;
    }

    .gradient-text {
        background: linear-gradient(
            135deg,
            var(--accent-primary),
            var(--accent-secondary)
        );
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .cursor {
        display: inline-block;
        width: 2px;
        height: 1em;
        background: var(--accent-primary);
        margin-left: 2px;
        vertical-align: middle;
        animation: blink 1s step-end infinite;
    }

    @keyframes blink {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
    }
</style>
