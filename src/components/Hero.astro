---
import Section from "./Section.astro";
import GlowButton from "./ui/GlowButton.astro";
import { Image } from "astro:assets";
import profileImage from "../assets/profile.png";
---

<Section class="hero-section">
    <div class="hero-container">
        <!-- Dark overlay for contrast -->
        <div class="hero-backdrop"></div>

        <div class="hero-content">
            <!-- Name + Photo -->
            <div class="identity-row">
                <Image
                    src={profileImage}
                    alt="Wil Bishop"
                    class="hero-photo"
                    format="webp"
                    loading="eager"
                    width={80}
                    height={80}
                />
                <span class="hero-name">Wil Bishop</span>
            </div>

            <!-- Value Proposition -->
            <h1 class="hero-headline">I build applied ML systems that ship.</h1>

            <p class="hero-subheadline">
                Specializing in model deployment, data pipelines, and backend
                systems that scale.
            </p>

            <!-- CTAs -->
            <div class="hero-ctas">
                <GlowButton href="#projects" variant="primary">
                    View Projects
                </GlowButton>
                <GlowButton href="#about" variant="ghost">
                    About Me
                </GlowButton>
            </div>
        </div>
    </div>
</Section>

<style>
    .hero-section {
        min-height: 100vh;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: var(--space-8);
        position: relative;
    }

    .hero-container {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
    }

    .hero-backdrop {
        position: absolute;
        inset: -40px;
        background: rgba(5, 5, 6, 0.7);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: var(--radius-xl);
        border: 1px solid rgba(255, 255, 255, 0.05);
        z-index: -1;
    }

    .hero-content {
        padding: var(--space-12);
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: var(--space-6);
    }

    /* Identity Row: Photo + Name */
    .identity-row {
        display: flex;
        align-items: center;
        gap: var(--space-4);
    }

    .hero-photo {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid rgba(255, 255, 255, 0.1);
    }

    .hero-name {
        font-family: var(--font-display);
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text-secondary);
        letter-spacing: -0.01em;
    }

    /* Main Headline */
    .hero-headline {
        font-family: var(--font-display);
        font-size: clamp(2.5rem, 6vw, 4rem);
        font-weight: 800;
        line-height: 1.1;
        letter-spacing: -0.03em;
        color: var(--text-primary);
        margin: 0;
        max-width: 14ch; /* Limit line length */
    }

    /* Subheadline */
    .hero-subheadline {
        font-size: clamp(1rem, 2vw, 1.25rem);
        line-height: 1.6;
        color: var(--text-secondary);
        max-width: 50ch;
        margin: 0;
    }

    /* CTAs */
    .hero-ctas {
        display: flex;
        gap: var(--space-4);
        margin-top: var(--space-4);
        flex-wrap: wrap;
    }

    /* Mobile adjustments */
    @media (max-width: 640px) {
        .hero-content {
            padding: var(--space-8);
        }

        .hero-photo {
            width: 48px;
            height: 48px;
        }

        .hero-name {
            font-size: 1rem;
        }

        .hero-ctas {
            width: 100%;
        }

        .hero-ctas :global(.glow-button) {
            flex: 1;
            justify-content: center;
        }
    }
</style>
