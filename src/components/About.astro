---
import Section from "./Section.astro";
import Card from "./ui/Card.astro";
---

<Section id="about">
    <div class="about-container">
        <div class="bio">
            <p>
                I am a passionate Computer Science student with a deep focus on
                Artificial Intelligence and Machine Learning. My journey
                involves exploring the depths of neural networks, natural
                language processing, and computer vision.
            </p>
            <p>
                I'm constantly building projects that push the boundaries of
                what's possible with code and data. Currently exploring
                generative models and reinforcement learning.
            </p>
        </div>

        <Card class="tech-stack-card" glass={true}>
            <h3>Tech Stack</h3>
            <div class="tags">
                {
                    [
                        "Python",
                        "PyTorch",
                        "TensorFlow",
                        "React",
                        "TypeScript",
                        "Node.js",
                        "PostgreSQL",
                        "Docker",
                        "AWS",
                    ].map((tech) => (
                        <span class="tag" translate="no">
                            {tech}
                        </span>
                    ))
                }
            </div>
        </Card>
    </div>
</Section>

<style>
    .about-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-8);
        padding: var(--space-8) var(--space-8);
        max-width: 1200px;
        margin: 0 auto;
    }

    @media (min-width: 768px) {
        .about-container {
            grid-template-columns: 1.2fr 0.8fr;
            align-items: start;
        }
    }

    .bio {
        color: var(--text-secondary);
        font-size: 1.1rem;
    }

    .bio p {
        margin-bottom: var(--space-6);
    }

    .tech-stack-card {
        padding: var(--space-8);
    }

    h3 {
        font-size: 1.5rem;
        margin-bottom: var(--space-6);
        color: var(--accent-tertiary);
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-3);
    }

    .tag {
        padding: var(--space-2) var(--space-4);
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50px;
        font-size: 0.9rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all var(--duration-fast) ease;
        cursor: default;
    }

    .tag:hover {
        background: rgba(99, 102, 241, 0.2);
        border-color: var(--accent-primary);
    }
</style>
