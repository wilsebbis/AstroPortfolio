---
import Section from "./Section.astro";

const projects = [
    {
        title: "Real-time Style Transfer",
        description:
            "Optimized VGG-19 inference for mobile edge devices, reducing latency by 60% while maintaining perceptual quality.",
        outcome:
            "Shipped to 50k+ active users; enabled real-time interaction on mid-range hardware.",
        tags: ["PyTorch", "TensorRT", "C++", "NCNN"],
        github: "#",
        link: "#",
    },
    {
        title: "RL Multi-Agent Trading",
        description:
            "Deep Reinforcement Learning system using PPO for high-frequency algorithmic trading in volatile crypto markets.",
        outcome:
            "Achieved 45% Alpha over BTC benchmark in backtests; 12% reduced drawdown.",
        tags: ["Ray Rllib", "Python", "VectorBT", "Redis"],
        github: "#",
        link: "#",
    },
    {
        title: "Medical Semantic Segmentation",
        description:
            "U-Net implementation for automated lung nodule detection in CT scans with uncertainty quantification.",
        outcome:
            "92% Dice Coefficient; 15% reduction in false positives compared to baseline models.",
        tags: ["TensorFlow", "Keras", "NumPy", "OpenCV"],
        github: "#",
        link: "#",
    },
];
---

<Section id="projects" class="py-24">
    <div class="max-w-6xl mx-auto px-8">
        <div
            class="flex flex-col md:flex-row md:items-end justify-between mb-16 gap-6"
        >
            <div class="space-y-4">
                <h2 class="font-display text-4xl font-bold tracking-tight">
                    Selected Projects
                </h2>
                <p class="text-text-secondary max-w-xl">
                    Focused on bridging the gap between innovative research and
                    production-grade software performance.
                </p>
            </div>
            <a
                href="https://github.com/wilsebbis"
                target="_blank"
                class="kinetic-underline text-accent-primary font-semibold flex items-center gap-2"
            >
                Archives on GitHub
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path
                        d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                    ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
                >
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                projects.map((project) => (
                    <div class="glass-card glass-card-hover p-8 flex flex-col group h-full">
                        <div class="mb-6">
                            <h3 class="font-display text-xl font-bold group-hover:text-accent-primary transition-colors mb-2">
                                {project.title}
                            </h3>
                            <p class="text-sm text-text-secondary line-clamp-2">
                                {project.description}
                            </p>
                        </div>

                        <div class="bg-accent-primary/5 border-l-2 border-accent-primary/30 p-4 mb-8">
                            <p class="text-xs font-mono text-accent-primary uppercase tracking-wider mb-1">
                                Key Outcome
                            </p>
                            <p class="text-sm text-text-primary leading-snug">
                                {project.outcome}
                            </p>
                        </div>

                        <div class="flex-grow" />

                        <div class="flex flex-wrap gap-2 mb-8">
                            {project.tags.map((tag) => (
                                <span class="text-[10px] font-bold px-2 py-0.5 rounded uppercase tracking-tighter bg-white/5 border border-white/5 text-text-secondary">
                                    {tag}
                                </span>
                            ))}
                        </div>

                        <div class="flex items-center gap-4 border-t border-white/5 pt-6 mt-auto">
                            <a
                                href={project.github}
                                class="text-text-secondary hover:text-white transition-colors"
                                aria-label="Github"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <>
                                        <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                                        <path d="M9 18c-4.51 2-5-2-7-2" />
                                    </>
                                </svg>
                            </a>
                            <a
                                href={project.link}
                                class="kinetic-underline text-sm font-bold text-text-primary"
                            >
                                Details
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</Section>
